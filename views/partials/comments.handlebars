<div id="comments">
    {{#each this}}
    <article class="card comment-card">
        <div class="card-header card-header-title is-flex is-justify-content-space-between has-background-grey-lighter">
            <p>{{user.username}}</p>
            <span>{{date_format created_at}}</span>
        </div>
        <div class="card-content has-text-black" >
            {{comment_text}}
        </div>
    </article>
    <br/>
    {{/each}}
</div>