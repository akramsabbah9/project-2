{{#if articles.length}}

<section>
	<ol>
		{{#each articles as |article|}}
		<li>
			<div>
				{{>article-card article}}
				{{!--TODO - include pagination ?--}}
			</div>
		</li>
		{{/each}}
	</ol>
</section>
{{else}}
<section>
	<div>
		<h2 class="post-header">We couldn't find any articles that match those terms!'</h2></br>
		{{!--TODO - add options to search again or post a new article--}}
	</div>
</section>
{{/if}}