<div>
	<ul>
		{{#if result}}
		<div class="section has-text-centered m-2">
			<h1 class="is-size-4">
				{{result.length}} Search Results:
			</h1>
		</div>
		{{#each result as |article|}}
		<li>
			<div>
				<article class="card comment-card">
					<div
						class="card-header card-header-title is-flex is-justify-content-space-between has-background-grey-lighter">
						<p><a href="/article/{{article.id}}">{{article.title}}</p></a>
						<span>{{date_format created_at}}</span>
					</div>
			</div>
		</li>
	</ul>
</div>
</article>
{{/each}}
{{else}}
<section>
	<div style="display: flex; justify-contents:center; align-items:center; flex-direction: column;">
		<h2 class="post-header" style="font-size: 1.5rem;">We couldn't find any articles that matched those terms.
		</h2>
		</br>
		<img src="../images/blackhole.jpg" alt="black hole" style="height: 450px; opacity: 0.5; padding: 50px;">
	</div>
</section>
{{/if}}
<script src="/javascript/search.js"></script>