<div class='columns'>
    <div class='column'>
        <form class='box signup-form'>
            <p class='title'>
                New Member Signup
            </p>
            <p class='subtitle'>
                Welcome Aboard
            </p>

            <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left">
                <input class="input" type="email" id='email-signup' placeholder="Email">
                <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
                </span>
            </div>
            </div>

            <div class='field'>
                <label class='label'>Password</label>
                <div class='control has-icons-left'>
                    <input class='input' type='password' id='password-signup' placeholder='We promise not to tell'>
                    <span class='icon is-small is-left'>
                        <i class='fas fa-key'></i>
                    </span>
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button type='submit' class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                </div>
            </div>
        </form>
    </div>
    <div class='column'>
        <div class='box'>
            <figure class="image is-6by3 armstrong">
                <img src="/images/bowie_quote.png">
            </figure>
        </div>
    </div>
</div>
<script src="/javascript/login.js"></script>