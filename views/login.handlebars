<div class='card'>
    <div class='card-content login'>
        <p class='title'>
            Already a Member?
        </p>
        <p class='subtitle'>
            Sign In to continue.
        </p>
        <div class='field'>
            <label for='email-login' class='label'>Email</label>
            <div class='control has-icons-left'>
                <input class='input' type='email' id='email-login' placeholder='Email Address'>
                <span class='icon is-small is-left'>
                    <i class='fas fa-envelope'></i>
                </span>
            </div>
        </div>
        <div class='field'>
            <label for='password-login' class='label'>Password</label>
            <div class='control has-icons-left'>
                <input class='input' type='text' id='password-login' placeholder='Password'>
                <span class='icon is-left'>
                    <i class='fas fa-lock'></i>
                </span>
            </div>
        </div>
        <footer class='card-footer'>
                <button type='submit' class='is-link'>Register</button>
        </footer>
    </div>
</div>