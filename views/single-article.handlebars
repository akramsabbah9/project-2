<article class="single-article">
	<div>
		{{article.title}}
		</br>
		{{!--TODO - write javascript button handler (see below)--}}
		{{!-- when rev-btn is clicked, article-history-index will rend using the article's revisions by using the article_id--}}
		<button class="rev-btn" data-id="{{article.id}}">
			{{article.revisions.length}}
			{{word_format "revision" article.revisions.length}}
		</button>
		<p class="article-content">{{article.content}}</p>
	</div>
	<div class="meta">


		{{format_date article.created_at}},
		{{format_time article.created_at}}
		</br>

		{{article.comments.length}} {{word_format "comment" article.comments.length}}
		</br>
	</div>
</article>
