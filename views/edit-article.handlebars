<form class="box">
    <div class='card'>
        <div class='card-content'>
            <p class='title'>{{article.title}}</p>
            <div class='field'>
                <label class='label'>Article Content</label>
                <div class='control'>
                    <textarea class='textarea' rows="15">{{article.content}}</textarea>
                </div>
            </div>

            <div class="is-flex is-justify-content-flex-end">
		        <div class="is-grouped">
                    <button id="update" class="button is-success" type='submit'>Submit</button>
                    <a href="/article/{{article.id}}" class="button is-light">Cancel</a>
                    <button id="delete-btn" class="button is-danger">Delete This Article</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="/javascript/delete-article.js"></script>