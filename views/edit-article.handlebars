<div class='card'>
    <div class='card-content'>
        <p class='title'>{{article.title}}</p>
    </div>
    <div class='field'>
        <label class='label'>Article Content</label>
        <div class='control'>
            <textarea class='textarea is-large'>{{article.content}}</textarea>
        </div>
    </div>
    <div class='field'>
        <label class='label'>Sources</label>
        <div class='control'>
            <textarea class='textarea is-small'>{{article.source}}</textarea>
        </div>
    </div>
    <div class='control'>
        <button type='submit'>Submit</button>
    </div>
</div>
